<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"></field>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name="groups">security_groups.group_confirm_quotation</attribute>
                </xpath>

                <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                    <attribute name="groups">security_groups.group_confirm_quotation</attribute>
                </xpath>

                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='discount']" position="attributes">
                    <attribute name="groups">security_groups.group_discount_quotation</attribute>
                </xpath>

            </field>
        </record>
        
        <record model="ir.ui.view" id="view_order_margin_form">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_margin.sale_margin_sale_order"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='margin']" position="attributes">
                    <attribute name="groups">security_groups.margen_security_it_tos</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

